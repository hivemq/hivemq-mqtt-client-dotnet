<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Build">
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>HiveMQtt</AssemblyName>
    <ReleaseVersion>0.1.0</ReleaseVersion>
    <Description>HiveMQ MQTT Client that is a MQTT 5.0 compatible C# client library.</Description>
  </PropertyGroup>

  <PropertyGroup Label="Package">
    <Product>HiveMQtt: A Universal MQTT Client</Product>
    <Description>HiveMQ MQTT Client that is a MQTT 5.0 compatible C# client library.</Description>
    <PackageTags>MQTT;HIVEMQ;IOT</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DefineConstants>DEBUG;NET;NET6_0;NETCOREAPP</DefineConstants>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' " />
  <ItemGroup>
    <None Remove="MQTT\Connect\" />
    <None Remove="Connect\" />
    <None Remove="MQTT5\" />
    <None Remove="System.IO.Pipelines" />
    <None Remove="Microsoft.Extensions.Logging.Abstractions" />
    <None Remove="NLog" />
    <None Remove="NLog.config" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Connect\" />
    <Folder Include="MQTT5\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.IO.Pipelines" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
    <PackageReference Include="NLog" Version="5.1.1" />
  </ItemGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="HiveMQtt.Test" PublicKey="fc5550082a9c642c" />
  </ItemGroup>
  <ItemGroup>
</ItemGroup>
  <ItemGroup>
    <Content Include="NLog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
